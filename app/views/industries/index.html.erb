<p id="notice"><%= notice %></p>

<h1>Industries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.title %></td>
        <td><%= link_to 'Show', industry %></td>
        <% if policy(industry).edit? %>
          <%= link_to 'Edit', edit_industry_path(@industry) %>
          <%= link_to 'Destroy', industry, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if policy(Industry).new? %>

  <%= link_to 'New industry', new_industry_path %>
<% end %>
